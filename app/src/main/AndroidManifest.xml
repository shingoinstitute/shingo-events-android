<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.shingo.shingoeventsapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".ui.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.EventListActivity"
            android:label="@string/title_event_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.EventDetailActivity"
            android:label="@string/title_event_detail"
            android:parentActivityName=".ui.EventListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.EventListActivity" />
        </activity>
        <activity
            android:name=".ui.AttendeeListActivity"
            android:label="@string/title_attendee_list"
            android:parentActivityName=".ui.EventListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.EventListActivity" />
        </activity>
        <activity
            android:name=".ui.AttendeeDetailActivity"
            android:label="@string/title_attendee_detail"
            android:parentActivityName=".ui.AttendeeListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.AttendeeListActivity" />
        </activity>
        <activity
            android:name=".ui.ConnectionListActivity"
            android:label="@string/title_connection_list"
            android:parentActivityName=".ui.EventListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.EventListActivity" />
        </activity>
        <activity
            android:name=".ui.ConnectionDetailActivity"
            android:label="@string/title_connection_detail"
            android:parentActivityName=".ui.ConnectionListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ConnectionListActivity" />
        </activity>
        <activity
            android:name=".ui.SessionListActivity"
            android:label="@string/title_session_list"
            android:parentActivityName=".ui.EventListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.ui.EventListActivity" />
        </activity>
        <activity
            android:name=".ui.SessionDetailActivity"
            android:label="@string/title_session_detail"
            android:parentActivityName=".ui.SessionListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.ui.SessionListActivity" />
        </activity>
    </application>

</manifest>
