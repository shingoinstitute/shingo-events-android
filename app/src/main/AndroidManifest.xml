<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.shingo.shingoeventsapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.LoginActivity" />
        </activity>
        <activity
            android:name=".EventListActivity"
            android:label="@string/title_event_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".EventDetailActivity"
            android:label="@string/title_event_detail"
            android:parentActivityName=".EventListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.EventListActivity" />
        </activity>
        <activity
            android:name=".AttendeeListActivity"
            android:label="@string/title_attendee_list"
            android:parentActivityName=".EventListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.EventListActivity" />
        </activity>
        <activity
            android:name=".AttendeeDetailActivity"
            android:label="@string/title_attendee_detail"
            android:parentActivityName=".AttendeeListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.AttendeeListActivity" />
        </activity>
        <activity
            android:name=".ConnectionListActivity"
            android:label="@string/title_connection_list"
            android:parentActivityName=".EventListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.EventListActivity" />
        </activity>
        <activity
            android:name=".ConnectionDetailActivity"
            android:label="@string/title_connection_detail"
            android:parentActivityName=".ConnectionListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoeventsapp.ConnectionListActivity" />
        </activity>
    </application>

</manifest>
