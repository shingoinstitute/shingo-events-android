<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
    android:layout_width="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <LinearLayout
            android:id="@+id/agenda_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/agenda_sessions" android:clickable="true"
            style="?android:attr/textAppearanceLarge" android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="wrap_content" android:padding="16dp" android:textIsSelectable="true" android:dividerPadding="5dp"
            tools:context=".ui.agendas.AgendaDetailFragment" android:divider="?android:dividerHorizontal"
            android:showDividers="middle"/>
    </LinearLayout>
</ScrollView>