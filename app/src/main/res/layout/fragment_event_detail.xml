<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
        android:layout_width="@dimen/button_wh" android:layout_height="@dimen/button_wh"
        android:id="@+id/action_agenda"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/schedule_button" />
    <Button
        android:layout_width="@dimen/button_wh"
        android:layout_height="@dimen/button_wh"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/action_speakers"
        android:layout_toRightOf="@+id/action_agenda"
        android:background="@drawable/speaker_button" />
    <Button
        android:layout_width="@dimen/button_wh"
        android:layout_height="@dimen/button_wh"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/action_city_map"
        android:layout_below="@id/action_agenda"
        android:background="@drawable/directions_button" />
    <Button
        android:layout_width="@dimen/button_wh"
        android:layout_height="@dimen/button_wh"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/action_affiliates"
        android:layout_below="@id/action_speakers"
        android:layout_toRightOf="@id/action_city_map"
        android:background="@drawable/affiliates_button" />
    <Button
        android:layout_width="@dimen/button_wh"
        android:layout_height="@dimen/button_wh"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/action_exhibitors"
        android:layout_below="@id/action_city_map"
        android:background="@drawable/exhibitors_button" />
    <Button
        android:layout_width="@dimen/button_wh"
        android:layout_height="@dimen/button_wh"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/action_recipients"
        android:layout_below="@id/action_affiliates"
        android:layout_toRightOf="@id/action_exhibitors"
        android:background="@drawable/recipients_button" />

</RelativeLayout>
